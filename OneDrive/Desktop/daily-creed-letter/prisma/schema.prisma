generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiaryEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  text      String   // 짧은 일기 내용
  mood      String?  // 'low', 'normal', 'high'
  createdAt DateTime @default(now())
}
